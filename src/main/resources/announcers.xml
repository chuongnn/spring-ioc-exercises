<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="announcer" class="home.spring.ioc.exercises.first.MessageAnnouncer">
        <property name="announcerName" value="ABC"/>
        <property name="message">
            <bean class="home.spring.ioc.exercises.first.CustomizedMessage">
                <constructor-arg value="home built message" index="0"/>
            </bean>
        </property>
    </bean>
</beans>
